<h3>Lista Mercadoria de Envio Para venda</h3>
{{=projeto.total_preco_envio}}
<a class="btn btn-secondary btn-block"  href="{{=URL('inserir_merc_envio', args=projeto.id)}}">Enviar Produto</a>

 <table class="table">
            <thead>
              <tr>
                <th>Quant</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Total</th>
				 <th>Custo</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
				{{total_preco_mercadoria=0.0}}
				{{total_custo_mercadoria=0.0}}
				{{total_quant=0.0}}
				{{total_custo=0.0}}
				{{total_preco=0.0}}
				{{for row in rows:}}
              <tr>

                <th>{{=row.quant_pcs_enviada}}</th>
                  <th><a href="{{=URL('alterar_merc_enviada', args=row.id)}}">{{=row.descricao}}</a></th>
				<th>{{=row.preco_unitario}}</th>
				{{total_preco=row.quant_pcs_enviada*row.preco_unitario}}
				<th>{{=total_preco}}</th>
				<th>{{=row.custo_unitario}}</th>
				{{total_custo=row.quant_pcs_enviada*row.custo_unitario}}
				<th>{{=total_custo}}</th>
				{{total_preco_mercadoria=total_preco_mercadoria+total_preco}}

				{{total_custo_mercadoria=total_custo_mercadoria+total_custo}}
				 {{total_quant+=row.quant_pcs_enviada}}
              </tr>
              {{pass}}
				 <tr>

                <th>{{=total_quant}}</th>
				<th>Total</th>
				<th>--></th>
				<th>{{=total_preco_mercadoria}}</th>
					 <th>--></th>
				<th>{{=total_custo_mercadoria}}</th>
                     {{projeto.total_preco_envio=total_preco_mercadoria}}
                     {{projeto.total_custo_envio=total_custo_mercadoria}}
                     {{projeto.total_quant_pcs_envio=total_quant}}
                    {{projeto.update_record()}}
              </tr>
            </tbody>
          </table>
